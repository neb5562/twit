<section class="vh-50 bg-image" >
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Create an account</h2>

              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {'data-turbo' => "false"}) do |f| %>
              <%= f.error_notification %>

                <div class="form-outline mb-4">
    <%= f.input :name,
                required: true,
                input_html: { autocomplete: "Name" }, class: "form-control form-control-lg", id:"form3Example2cg" %>
                
                </div>
                <div class="form-outline mb-4">
    <%= f.input :username,
                required: true,
                input_html: { autocomplete: "Username" }, class: "form-control form-control-lg", id:"form3Example1cg" %>
                
                </div>
                <div class="form-outline mb-4">
    <%= f.input :email,
                required: true,
                input_html: { autocomplete: "Email" }, class: "form-control form-control-lg", id:"form3Example3cg" %>
                
                </div>

                <div class="form-outline mb-4">
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" }, class: "form-control form-control-lg" , id: "form3Example4cg" %>

                </div>


                <div class="form-outline mb-4">
    <%= f.input :password_confirmation,
                
                input_html: { autocomplete: "new-password" }, class: "form-control form-control-lg", id: "form3Example4cdg" %>

                </div>



                <div class="d-flex justify-content-center">
                  <%= f.button :submit, "Sign up", class: "btn btn-primary btn-md" %>
                </div>
                
                <p class="text-center text-muted mt-5 mb-0">Have already an account? 
                 <%= link_to "Login here", new_user_session_path, class: "fw-bold text-body" %>
                </p>

              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
