<div class="card mb-4">
 <div class="card-header p-3">
        <div class=" image d-flex flex-column justify-content-center align-items-center"> 
         <img src="https://ui-avatars.com/api/?background=random&amp;length=3&amp;name=<%=current_user.username[0,3]%>" height="100" width="100" /> <span class="name mt-3"><%= @user.name %></span> <span class="idd">
         <%= link_to show_user_profile_path("@" << @user.username), class: "h8 card-title text-decoration-none text-secondary" do %>
         @<%= @user.username %>
         <%end %>
         </span>
            <div class="d-flex flex-row justify-content-center align-items-center mt-3"> <span class="number"> <%= @user.follower.count%> </span><span class="follow">&nbsp;<%=@user.follower.count < 2 ? "Follower" : "Followers" %></span> </div>
            <div class=" d-flex mt-2">
            <% if current_user.id != @user.id %>

            <% if @user.follower.find_by(follow: current_user.id) %>
                <%= link_to "Unfollow", "javascript:;", class: "btn follow-profile btn-outline-primary", follow: current_user.id, user_id: @user.id%>
            <% else %>
                <%= link_to "Follow", "javascript:;", class: "btn follow-profile btn-primary", follow: current_user.id, user_id: @user.id %>
            <% end %>
            
            <% end %>
            </div>
            <div class=" px-2 rounded mt-4 date "> <span class="join">Joined <%= @user.created_at.strftime("%b, %Y") %></span> </div>
        </div>
    </div>
    </div>
